<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue_gray_400_transparent</item>
        <item name="colorPrimaryVariant">@color/blue_gray_200_transparent</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="fontFamily">@font/aclonica</item>
    </style>

    <style name="display">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
    </style>



    <style name="calc_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/calc_button</item>
        <item name="android:autoSizeTextType" tools:ignore="NewApi">uniform</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>>
    </style>

    <style name="operand_button" parent="calc_button">
        <item name="backgroundTint">@color/blue_gray_400_transparent</item>
    </style>

    <style name="operand_button_land" parent="calc_button_land">
        <item name="backgroundTint">@color/blue_gray_400_transparent</item>
    </style>

    <style name="num_button" parent="calc_button">
        <item name="backgroundTint">@color/blue_gray_200_transparent</item>
    </style>

    <style name="num_button_land" parent="calc_button_land">
        <item name="backgroundTint">@color/blue_gray_200_transparent</item>
        <item name="android:layout_weight">1.4</item>
    </style>

    <style name="ac_button" parent="calc_button">
        <item name="backgroundTint">@color/red_a200_transparent</item>
    </style>

    <style name="ac_button_land" parent="calc_button_land">
        <item name="backgroundTint">@color/red_a200_transparent</item>
        <item name="android:layout_weight">0.7</item>
    </style>


    <style name="equals_button" parent="calc_button">
        <item name="backgroundTint">@color/light_green_a200_transparent</item>
        <item name="android:textColor">@color/light_green_a700</item>
    </style>

    <style name="equals_button_land" parent="calc_button_land">
        <item name="backgroundTint">@color/light_green_a200_transparent</item>
        <item name="android:textColor">@color/light_green_a700</item>
    </style>

    <style name="backspace_button" parent="calc_button">
        <item name="tint">@color/white</item>
        <item name="backgroundTint">@color/orange_200_transparent</item>
        <item name="srcCompat">@android:drawable/ic_input_delete</item>
    </style>

    <style name="backspace_button_land" parent="calc_button_land">
        <item name="tint">@color/white</item>
        <item name="backgroundTint">@color/orange_200_transparent</item>
        <item name="srcCompat">@android:drawable/ic_input_delete</item>
    </style>

    <style name="settings_button" parent="calc_button">
        <item name="tint">@color/white</item>
        <item name="backgroundTint">@color/blue_gray_700_transparent</item>
        <item name="srcCompat">@android:drawable/ic_menu_preferences</item>
        <item name="android:layout_weight">0.4</item>
    </style>

    <style name="settings_button_land" parent="calc_button_land">
        <item name="tint">@color/white</item>
        <item name="backgroundTint">@color/blue_gray_700_transparent</item>
        <item name="srcCompat">@android:drawable/ic_menu_preferences</item>
        <item name="android:layout_weight">0.5</item>
    </style>


</resources>